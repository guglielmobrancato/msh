# ==============================================
# ANCILE AI - Environment Configuration
# ==============================================
# CRITICAL: Copy this file to .env and add your actual API keys
# NEVER commit .env to version control

# ============ AI & CONTENT GENERATION ============
# Gemini API (get key from: https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# ============ NEWS & DATA SOURCES ============
# NewsAPI (free tier: https://newsapi.org/)
NEWS_API_KEY=your_newsapi_key_here

# AlphaVantage for financial data (optional)
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# ============ DATABASE ============
# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://intel_user:secure_password@localhost:5432/ancile_ai

# ============ HEADLESS CMS (STRAPI) ============
# Strapi URL and API token
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token_here

# ============ INSTAGRAM AUTOMATION ============
# Option A: Instagram credentials (for Instagrapi)
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Option B: Make.com webhook (for Make.com integration)
MAKE_WEBHOOK_URL=https://hook.make.com/your_webhook_url

# ============ SYSTEM CONFIGURATION ============
# Content pipeline settings
MAX_ARTICLES_PER_RUN=5
MIN_RELEVANCE_SCORE=0.7
ARTICLE_MIN_WORDS=1500
ARTICLE_MAX_WORDS=3000

# Publishing schedule (for reference - actual scheduling via cron)
PIPELINE_INTERVAL_HOURS=6

# Instagram posting settings
INSTAGRAM_ENABLED=true
INSTAGRAM_METHOD=instagrapi  # Options: instagrapi, make

# ============ OPTIONAL: MONITORING ============
# Sentry.io for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Email alerts for pipeline failures (optional)
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password

# ============ SECURITY ============
# Set to 'production' on VPS
ENVIRONMENT=development

# API rate limiting
GEMINI_MAX_RPM=15
NEWS_API_MAX_REQUESTS_PER_DAY=100
